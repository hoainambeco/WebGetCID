<link href='//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'/>

<script src='//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js' type='text/javascript'></script>

<script src='//cdnjs.cloudflare.com/ajax/libs/clipboard.js/1.7.1/clipboard.min.js' type='text/javascript'></script>

<script type='text/javascript'>
    //<![CDATA[
    $(function(){new Clipboard(".copyTextButton")});
    //]]></script>

<style>
    .codeToClipboardHeader{background-color:#fff;text-align:center;padding:3px}
    .copyTextButton{color:#000!important;font-size:18px;padding:4px 10px;text-decoration:none}
    .copyTextButton:before{margin:0 5px 0 0;font-size:16px;content:'\f0c5';font-family:fontawesome}
    pre.codeToClipboard{background:#fff;max-height:500px;font-size:14px;color:#000;overflow:auto;border:1px solid #d3d6db;margin:auto;padding:10px 8px}
</style>
<div class="container-fluid text-center" style="display: flex;width: 100%; height: 100%; justify-content: center;justify-items: center; align-items: center;align-content: center">
    <style>
        .imglogo {
            margin-left: 50px;
            margin-top: 10px;
            margin-bottom: 10px;
            width: 110px;
            height: 30px;
        }
    </style>
    <script>
        function show_login() {
            document.getElementById('alerButtom').style.display = "block";
            setTimeout(function () {
                document.getElementById('fromInPut').style.display = "none";
            }, 3000);
        }
    </script>
    <div class="text-center" style="width: inherit; margin: auto; display: block">
        <img src="{{img}}" alt="phone" width="150px">
        <h1>Phone Activation Center</h1>
        {{#if messageCID}}
            {{{alert}}}
        {{else}}
            <div>
                <p>Supported Licenses</p>
                <img class="imglogo" src="https://img-prod-cms-rt-microsoft-com.akamaized.net/cms/api/am/imageFileData/RE1Mu3b?ver=5c31" alt="">
                <img class="imglogo" src="images/office.png" alt="">
            </div>
        {{/if}}
        <form method="post" style="margin-top: 30px; display: {{display}}" id="fromInPut">
            {{#if message}}
                <label for="message" class="text-danger my-1">{{message}}</label>
            {{/if}}
            <label for="message" class="text-success my-1">Installation ID</label>
            <input type="text" name="registerf" placeholder="Installation ID" required="required"  class="col-12 col-xl-4 col-md-12 col-lg-12 col-sm-12" value="{{iid}}"/>
            <label for="message" class="text-success my-1" id="alerButtom" style="display: none">Requesting activation token from microsoft</label>
            <Button type="submit" class="btn btn-primary btn-block btn-large my-2" onclick="show_login()">
                Submit
            </Button>
        </form>
        {{#if cid}}
            <div style=" margin: auto">
                <label for="message" class="text-success my-1 col-12 col-xl-8 col-md-12 col-lg-12 col-sm-12 my-2">{{messageCID}}</label>
                <input type="text" name="registerf" required="required"  class="col-12 col-xl-5 col-md-12 col-lg-12 col-sm-12 my-2" value="{{cid}}" class="codeToClipboard" id="content1" style="text-align: center"/>
            </div>
            <div class="codeToClipboardHeader btn btn-primary btn-block btn-large">
                <a class="copyTextButton" data-clipboard-target="#content1" href="#null" title="Copy to clipboard">Copy</a>
            </div>
        {{/if}}
    </div>
</div>
